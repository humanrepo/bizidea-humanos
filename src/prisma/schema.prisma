generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String   @default("user") // admin or user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ideas     Idea[]   // Relation avec les idées
}

// Idea model
model Idea {
  id                    Int      @id @default(autoincrement())
  title                 String
  description           String
  problem               String
  solution              String
  targetMarket          String
  uniqueValueProposition String
  businessModel         String
  competitors           String
  status                String   @default("draft") // draft, submitted, reviewed, accepted, rejected
  userId                Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user                  User     @relation(fields: [userId], references: [id])
}
