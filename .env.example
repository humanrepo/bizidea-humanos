# ==============================================
# PLATEFORME SAAS BIZIDEA - VARIABLES D'ENVIRONNEMENT
# ==============================================
# Copiez ce fichier vers .env et remplissez vos vraies valeurs
# Ne jamais commiter les fichiers .env dans le contrôle de version !

# ==============================================
# CONFIGURATION DU SERVEUR
# ==============================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ==============================================
# CONFIGURATION BASE DE DONNÉES POSTGRESQL
# ==============================================
PG_USER=postgres
PG_HOST=localhost
PG_DATABASE=bizidea_db
PG_PASSWORD=
PG_PORT=5432

# ==============================================
# CONFIGURATION MONGODB
# ==============================================
MONGO_URI=mongodb://localhost:27017/bizidea

# ==============================================
# AUTHENTIFICATION JWT
# ==============================================
JWT_SECRET=votre_clé_secrète_jwt_super_sécurisée_ici_au_moins_32_caractères
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=votre_secret_token_refresh_différent_du_jwt_secret
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# CONFIGURATION EMAIL
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_email
EMAIL_FROM=noreply@bizidea.com
EMAIL_FROM_NAME=Équipe Bizidea

# ==============================================
# CONFIGURATION TÉLÉCHARGEMENT DE FICHIERS
# ==============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ==============================================
# CONFIGURATION SÉCURITÉ
# ==============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=votre_clé_secrète_session_ici

# ==============================================
# CLÉS API EXTERNES
# ==============================================
# Traitement des paiements
STRIPE_SECRET_KEY=sk_test_votre_clé_secrète_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_votre_clé_publique_stripe
STRIPE_WEBHOOK_SECRET=whsec_votre_secret_webhook_stripe

# Services IA
OPENAI_API_KEY=sk-votre_clé_api_openai_ici
OPENAI_ORGANIZATION=org-votre_id_organisation_openai

# Stockage cloud (AWS S3)
AWS_ACCESS_KEY_ID=votre_clé_accès_aws
AWS_SECRET_ACCESS_KEY=votre_clé_secrète_aws
AWS_REGION=us-east-1
AWS_S3_BUCKET=bizidea-uploads

# Services Google
GOOGLE_CLIENT_ID=votre_id_client_oauth_google
GOOGLE_CLIENT_SECRET=votre_secret_client_oauth_google

# ==============================================
# SURVEILLANCE ET ANALYTIQUES
# ==============================================
SENTRY_DSN=votre_dsn_sentry_pour_suivi_erreurs
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=votre_token_mixpanel

# ==============================================
# CONFIGURATION REDIS (Optionnel - pour cache)
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=votre_mot_de_passe_redis

# ==============================================
# OUTILS DE DÉVELOPPEMENT
# ==============================================
# Mettre à true pour activer la journalisation détaillée
DEBUG=false
LOG_LEVEL=info

# Initialisation base de données (développement seulement)
SEED_DATABASE=false
ADMIN_EMAIL=admin@bizidea.com
ADMIN_PASSWORD=mot_de_passe_admin_sécurisé

# ==============================================
# SPÉCIFIQUE À LA PRODUCTION
# ==============================================
# Configuration SSL
SSL_CERT_PATH=/chemin/vers/ssl/cert.pem
SSL_KEY_PATH=/chemin/vers/ssl/private.key

# Configuration domaine
DOMAIN=bizidea.com
API_DOMAIN=api.bizidea.com

# Configuration CDN
CDN_URL=https://cdn.bizidea.com

# ==============================================
# INDICATEURS DE FONCTIONNALITÉS
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true
MAINTENANCE_MODE=false